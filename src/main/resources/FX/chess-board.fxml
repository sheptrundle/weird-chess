<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.ChessGameController"
      >

    <!-- Chessboard -->
    <GridPane fx:id="boardGrid"
              prefWidth="800"
              prefHeight="800"
              />

    <!-- Sidebar -->
    <VBox fx:id="sidebar"
          prefWidth="200"
          style="-fx-background-color: black;"
          spacing="20">

        <Label fx:id="blackClockLabel"
               text="Black Time"
               textFill="white"
               style="-fx-font-size: 20; -fx-font-weight: bold;" />

        <Pane fx:id="spacer" VBox.vgrow="ALWAYS"/>

        <Label fx:id="whiteClockLabel"
               text="White Time"
               textFill="white"
               style="-fx-font-size: 20; -fx-font-weight: bold;" />
    </VBox>
</HBox>

